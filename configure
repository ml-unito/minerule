#!/bin/sh
#
# NOTE - This is not a gnu configure script but a simple
#        tool to set the source directory!
#

echo Deducing version number from current path...
version=`tla pristines | tail -1 | perl -e '$r=<>; $r =~ /(.*)(\d+\.\d+\.\d+.*)/; print $2;'`

echo Detected version: $version

echo Generating Makefile.vars...
sed "s=@MRHOME@=$PWD=g;s=@MRVERSION@=$version=g" Makefile.vars.am > Makefile.vars
echo Done!

echo Generating Doxygen config file...
sed "s=@MRVERSION@=$version=g" Docs/Doxyfile.am > Docs/Doxyfile
echo Done!
